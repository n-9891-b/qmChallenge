{
  "compilerOptions": {
    "outDir": "./src/bin",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": [ "node" ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": ["es6", "dom"],
  },
  "include": [
    "./src/**/*"
  ],
}
